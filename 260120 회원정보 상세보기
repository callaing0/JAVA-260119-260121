package java060121;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Scanner;

public class MemberView {
	public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("조회할 회원 아이디를 입력하시오: ");
        String id = sc.nextLine();

        sc.close();

        Connection conn = null;
        PreparedStatement pstmt = null;
        ResultSet rs = null;

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");

            conn = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/javaExample?serverTimezone=Asia/Seoul",
                "javaUser",
                "1234"
            );

            String sql = "SELECT id, name, phone FROM member WHERE id = ?";

            pstmt = conn.prepareStatement(sql);
            pstmt.setString(1, id);

            rs = pstmt.executeQuery();

            if (rs.next()) {
                System.out.println("===== 회원 상세 정보 =====");
                System.out.println("아이디 : " + rs.getString("id"));
                System.out.println("이름   : " + rs.getString("name"));
                System.out.println("전화번호 : " + rs.getString("phone"));
            } else {
                System.out.println("해당 아이디의 회원이 존재하지 않습니다.");
            }

        } catch (Exception e) {
            System.out.println("DB 오류 발생");
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
                if (pstmt != null) pstmt.close();
                if (conn != null) conn.close();
            } catch (Exception e) {
                e.printStackTrace();
            }
        }

        System.out.println("프로그램 종료");
    }
}
