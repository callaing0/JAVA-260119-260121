package java260123_2;

import java.sql.Date;

public class StudentDTO {
    private int number;
    private String name, resident, phone, address;
    private Date createdDate;

    // 등록용 생성자
    public StudentDTO(String name, String resident, String phone, String address) {
        this.name = name;
        this.resident = resident;
        this.phone = phone;
        this.address = address;
        this.createdDate = new Date(System.currentTimeMillis());
    }

    // getter & setter
    public int getNumber() { return number; }
    public void setNumber(int number) { this.number = number; }
    public String getName() { return name; }
    public String getResident() { return resident; }
    public String getPhone() { return phone; }
    public void setPhone(String phone) { this.phone = phone; }
    public String getAddress() { return address; }
    public void setAddress(String address) { this.address = address; }
    public Date getCreatedDate() { return createdDate; }

    @Override
    public String toString() {
        return number + " | " + name + " | " + resident + " | " + phone + " | " + address + " | " + createdDate;
    }
}
